<!DOCTYPE html>
<html lang="zh-TW">
<head>
  <meta charset="UTF-8">
  <title>網路黑白棋</title>
  <style>
    body { text-align: center; font-family: Arial, sans-serif; }
    #board {
      display: grid;
      grid-template-columns: repeat(8, 50px);
      gap: 2px;
      width: 416px;
      margin: 20px auto;
      background: #333;
    }
    .cell {
      width: 50px; height: 50px;
      background: #4CAF50;
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 24px; color: #fff;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <h1>網路黑白棋遊戲</h1>
  <button id="init-btn">開始新局</button>
  <p>目前回合：<span id="current"></span></p>
  <div id="board"></div>
  
  <script>
    const BOARD_SIZE = 8;
    let board = [];
    let current;
    
    function drawBoard() {
      const boardDiv = document.getElementById('board');
      boardDiv.innerHTML = "";
      for (let r = 0; r < BOARD_SIZE; r++) {
        for (let c = 0; c < BOARD_SIZE; c++) {
          let cell = document.createElement('div');
          cell.className = 'cell';
          cell.dataset.row = r;
          cell.dataset.col = c;
          if (board[r][c] === "B") {
            cell.textContent = "●";
          } else if (board[r][c] === "W") {
            cell.textContent = "○";
          }
          cell.addEventListener('click', () => {
            fetch("/move", {
              method: "POST",
              headers: {"Content-Type": "application/json"},
              body: JSON.stringify({ row: r, col: c })
            })
            .then(res => res.json())
            .then(data => {
              if (!data.valid) {
                alert("此處無法下子！");
              } else {
                board = data.board;
                current = data.current;
                document.getElementById("current").textContent = current === "B" ? "黑(●)" : "白(○)";
                drawBoard();
              }
            });
          });
          boardDiv.appendChild(cell);
        }
      }
    }
    
    document.getElementById("init-btn").addEventListener("click", () => {
      fetch("/init")
      .then(res => res.json())
      .then(data => {
        board = data.board;
        current = data.current;
        document.getElementById("current").textContent = current === "B" ? "黑(●)" : "白(○)";
        drawBoard();
      });
    });
  </script>
</body>
</html>
